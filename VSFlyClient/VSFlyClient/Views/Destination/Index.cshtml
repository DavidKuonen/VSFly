@model VSFlyClient.Models.DestinationInfoM

@{
    ViewData["Title"] = "Index";
}

<h1>Choose Destination</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <dt class="col-sm-12">
                   Average Ticket Price for Destination
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AveragePrice) CHF
                </dd>
            </div>
            <div class="form-group">
                <input type="submit" value="Show" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Home", "Index", "Home", new { })

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
